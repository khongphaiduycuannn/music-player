<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnlHomeSong"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/_10sdp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="@dimen/_1sdp">

            <View
                android:id="@+id/ivBottomBackground"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="@dimen/_2sdp">

            <View
                android:id="@+id/ivTopBackground"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp" />
        </androidx.cardview.widget.CardView>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:elevation="@dimen/_3sdp"
            android:scaleType="centerCrop"
            app:riv_border_color="@color/gray400_50"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_corner_radius="@dimen/_5sdp"
            tools:src="@drawable/img_thumbnail_1" />

        <ImageView
            android:id="@+id/ivIsPlaying"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_4sdp"
            android:src="@drawable/ic_pause"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:layout_marginVertical="@dimen/_1sdp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/_8ssp"
        tools:text="Tuyển tập nhạc Ngọt sôi động" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/_7ssp"
        tools:text="Lần cuối, bé, nứt" />
</LinearLayout>